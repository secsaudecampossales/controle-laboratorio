generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Paciente {
  id        String   @id @default(cuid())
  nome      String
  cpf       String?  @unique
  rg        String?
  telefone  String?
  endereco  String?
  nascimento DateTime?
  numeroSus String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  exames    Exame[]
  
  @@map("pacientes")
}

model Exame {
  id          String   @id @default(cuid())
  tipo        TipoExame
  tipoCustom  String?
  resultado   String?
  observacoes String?
  dataExame   DateTime @default(now())
  dataResultado DateTime?
  status      StatusExame @default(PENDENTE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  pacienteId  String
  paciente    Paciente @relation(fields: [pacienteId], references: [id], onDelete: Cascade)
  
  @@map("exames")
}

enum TipoExame {
  BETA_HCG
  DENGUE
  CHIKUNGUNYA
  ZIKA
  COVID
  PPD
  INGRAM
  CHAGAS
  BACILOSCOPIA_ESCARRO
  OUTROS
}

enum StatusExame {
  PENDENTE
  PROCESSANDO
  CONCLUIDO
  CANCELADO
}

model Usuario {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  senha     String
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("usuarios")
}